<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>

  <title></title>
</head>
<body>
    <a href="/">Home</a>
  <% if logged_in? %>
    <a id = 'righter' href="/userprofile">Hello <%=current_user.first_name%></a>
    <form action='/sessions/logout' method = 'post'>
      <input type='hidden' name='_method' value='delete'/>
      <input id = 'right' type='submit' value='logout'/>
    </form>
  <% else %>
<form id = 'right' action="/sessions" method = "post">
    <input id = 'inline' type='text' name ='email' placeholder ='E-mail'/>
    <input id = 'inline' type='password' name ='password' placeholder ='Password'/>
  <input class="button-primary" type = 'submit' value = 'log in'/>
</form>
<a id = 'righter' href="/users/new">First time here? Sign Up</a>
  <% if @error %>
  <h6 id = 'wrongcredentials'><%= @error %><h6>
  <% end %>
  <% end %>
  <%= yield %>
</body>
</html>
